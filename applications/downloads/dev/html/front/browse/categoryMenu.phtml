<ips:template parameters="$categories" />
<ul class='ipsMenu ipsMenu_auto ipsHide' id='elDownloadsCategories_menu'>
	{{foreach $categories as $cat}}
		{{if $cat->can('view')}}
			<li class='ipsMenu_item'>
				<a href='{$cat->url()}'><span class="ipsMenu_itemCount">{number="\IPS\downloads\File::contentCount( $cat )"}</span>{$cat->_title}</a>
			</li>
		{{endif}}
	{{endforeach}}
</ul>
