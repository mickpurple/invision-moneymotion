<ips:template parameters="$class, $container=NULL" />
<i class='fa fa-{$class::$icon}'></i> 
{{if $container === NULL}}
	{lang="$class::$title"}
{{else}}
	<a href="{$container->url()}">{lang="icon_blurb_in_containers" sprintf="\IPS\Member::loggedIn()->language()->addToStack( $class::$title ), $container->_title"}</a>
{{endif}}