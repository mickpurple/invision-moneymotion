<ips:template parameters="$facebook, $isUsingDefault=true" />
<div id='acpWarnings'>
	<div class='ipsAreaBackground_light ipsPad'>
		<div>
			<h2 class='ipsType_sectionHead'><strong>{lang="promote_facebook_setup_user"}</strong></h2>
			<div class='ipsType_normal ipsType_reset'>
				{lang="promote_facebook_setup_user_desc"}
				<ul class='ipsToolList ipsToolList_horizontal ipsAlert_buttonRow ipsClear ipsClearfix'>
					{{if $isUsingDefault}}
						<li class="ipsPos_left"><a href="{url="app=core&module=system&controller=settings&area=login&service={$facebook->id}" base="front" seoTemplate="settings_login"}" target="_blank" rel="noopener" class="ipsButton ipsButton_primary">{lang="promote_facebook_setup_user_button"}</a></li>
					{{else}}
						<li class="ipsPos_left"><a href="{url="app=core&module=system&controller=facebook" base="front"}" target="_blank" class="ipsButton ipsButton_primary">{lang="promote_facebook_setup_user_button"}</a></li>
					{{endif}}
					<li class="ipsPos_left"><a href="{url="app=core&module=promotion&controller=promote&tab=facebook"}" class="ipsButton ipsButton_secondary"><i class="fa fa-refresh"></i> &nbsp; {lang="promote_reload_page"}</a></li>
					<li class="ipsPos_left"><a href="{url="app=core&module=promotion&controller=promote&tab=facebook&clear=true" csrf="true"}" class="ipsButton ipsButton_secondary"><i class="fa fa-trash"></i> &nbsp; {lang="promote_facebook_remove_settings"}</a></li>
				</ul>
			</div>
		</div>
	</div>
</div>